# BuildFund Backend Environment Variables
# Copy this file to .env and set appropriate values
# DO NOT commit .env files to version control

# Django Core Settings
DJANGO_SECRET_KEY=your_secret_key_here_generate_with_python_manage.py_generate_secret_key
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration
# For PostgreSQL:
DB_ENGINE=django.db.backends.postgresql
DB_NAME=buildfund
DB_USER=postgres
DB_PASSWORD=your_database_password_here
DB_HOST=127.0.0.1
DB_PORT=5432

# For SQLite (development only):
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# Django REST Framework Rate Limiting
DRF_RATE_LIMIT_ANON=100/day
DRF_RATE_LIMIT_USER=1000/day

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourfrontend.com,http://localhost:3000

# External API Keys
# These keys MUST be kept secret and never exposed in client-side code

# Google Maps API Key (for geocoding and mapping)
# Get your key from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=your_google_maps_api_key_here

# Companies House / HMRC API Key (for company verification)
# Get your free key from: https://developer.company-information.service.gov.uk/
HMRC_API_KEY=your_hmrc_api_key_here

# OpenAI API Key (for AI underwriter reports)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production, use SMTP:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_email_app_password
# DEFAULT_FROM_EMAIL=noreply@buildfund.com
